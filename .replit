# Replit run configuration for Android Gradle builds
run = ["bash","-lc","./scripts/build-debug.sh"]
language = "bash"
onBoot = ["bash","-lc","chmod +x scripts/*.sh || true"]
modules = ["java-graalvm22.3"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Android App"

[[workflows.workflow]]
name = "Build Android App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/build-debug.sh"

[workflows.workflow.metadata]
outputType = "console"

[nix]
channel = "stable-25_05"
packages = ["unzip"]
